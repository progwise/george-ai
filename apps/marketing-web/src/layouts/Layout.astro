---
import '../styles/global.css'
import BowlerLogo from '../components/BowlerLogo.astro'
import CloudIcon from '../components/CloudIcon.astro'
import { cn } from '../utils/cn'

interface Props {
  title: string
  description?: string
  ogImage?: string
  ogType?: string
}

const {
  title,
  description = 'George-AI - Self-hosted RAG platform',
  ogImage = '/bowler-logo.svg',
  ogType = 'website',
} = Astro.props
const currentPath = Astro.url.pathname
const canonicalURL = new URL(currentPath, Astro.site).href
const fullOgImageURL = new URL(ogImage, Astro.site).href
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImageURL} />
    <meta property="og:site_name" content="George-AI" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImageURL} />
  </head>
  <body class="m-0 p-0 font-sans">
    <div class="navbar bg-base-300">
      <div class="navbar-start">
          <a href="/" class={cn("btn btn-ghost")}>
            <BowlerLogo class={cn("size-10", currentPath === '/' && 'text-primary')} />
          </a>
      </div>
      <div class="navbar-center hidden md:flex">
        <ul class="menu menu-horizontal px-1">
          <li class={cn(currentPath === '/features' && 'active')}><a href="/features">Features</a></li>
          <li class={cn(currentPath === '/use-cases' && 'active')}><a href="/use-cases">Use Cases</a></li>
          <li class={cn(currentPath === '/pricing' && 'active')}><a href="/pricing">Pricing</a></li>
          <li class={cn(currentPath === '/docs' && 'active')}><a href="/docs">Documentation</a></li>
          <li class={cn(currentPath === '/contact' && 'active')}><a href="/contact">Contact</a></li>
        </ul>
      </div>
      <div class="navbar-end">
        <a href="https://app.george-ai.net/login" class="btn btn-outline">
          <CloudIcon class="size-5" />
          George-Cloud
        </a>
      </div>
    </div>

    <main class="max-w-7xl mx-auto px-8 py-8 min-h-[calc(100vh-200px)]">
      <slot />
    </main>

    <footer class="footer footer-center bg-base-200 p-8 text-base-content mt-16">
      <aside>
        <p>&copy; {new Date().getFullYear()} George-AI. All rights reserved.</p>
      </aside>
    </footer>
  </body>
</html>
