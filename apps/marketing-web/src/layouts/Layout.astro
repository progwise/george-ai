---
import '../styles/global.css'
import BowlerLogo from '../components/BowlerLogo.astro'
import CloudIcon from '../components/CloudIcon.astro'
import { cn } from '../utils/cn'
import { getAppUrl } from '../utils/config'

interface Props {
  title: string
  description?: string
  ogImage?: string
  ogType?: string
}

const {
  title,
  description = 'Self-hosted AI data platform. Centralized vector store for business users and AI applications. Ensure your vectors actually work.',
  ogImage = '/bowler-logo.svg',
  ogType = 'website',
} = Astro.props
// Normalize path by removing trailing slash (e.g., /pricing/ â†’ /pricing) for consistent active state matching
// The Node adapter adds trailing slashes to routes, but our href links don't have them
// Keep root path as '/' if pathname is empty after replacement
const currentPath = Astro.url.pathname.replace(/\/$/, '') || '/'
const canonicalURL = new URL(currentPath, Astro.site).href
const fullOgImageURL = new URL(ogImage, Astro.site).href
const appUrl = getAppUrl()

// Get current page name for mobile display
const getCurrentPageName = () => {
  if (currentPath === '/use-cases') return 'Use Cases'
  if (currentPath.startsWith('/docs')) return 'Documentation'
  if (currentPath === '/pricing') return 'Pricing'
  if (currentPath === '/contact') return 'Contact'
  return 'George AI'
}
const currentPageName = getCurrentPageName()
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImageURL} />
    <meta property="og:site_name" content="George-AI" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImageURL} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "George-AI",
        "description": "Self-hosted AI data platform. Centralized vector store for business users and AI applications with data quality verification.",
        "applicationCategory": "BusinessApplication",
        "operatingSystem": ["Linux", "Windows", "macOS"],
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "EUR",
          "description": "Free self-hosted community edition"
        },
        "url": "https://george-ai.net",
        "downloadUrl": "https://github.com/progwise/george-ai",
        "installUrl": "https://github.com/progwise/george-ai#readme",
        "codeRepository": "https://github.com/progwise/george-ai",
        "license": "https://github.com/progwise/george-ai/blob/main/LICENSE",
        "softwareHelp": "https://george-ai.net/docs",
        "screenshot": "https://george-ai.net/bowler-logo.svg",
        "featureList": [
          "Multi-source data collection and ingestion (Email, Web, SharePoint, SMB, Box.com, webhooks, n8n)",
          "AI-powered document processing and embeddings",
          "Vector search with Typesense",
          "Self-hosted deployment",
          "Multi-tenant support",
          "EU AI Act compliance features",
          "GraphQL API",
          "n8n workflow integration"
        ],
        "author": {
          "@type": "Organization",
          "name": "progwise",
          "url": "https://github.com/progwise"
        }
      }
    </script>
  </head>
  <body class="m-0 p-0 font-sans">
    <div class="navbar bg-base-300">
      <div class="navbar-start">
        <a href="/" class={cn("btn btn-ghost")}>
          <BowlerLogo class={cn("size-10", currentPath === '/' && 'text-primary')} />
        </a>
      </div>
      <div class="navbar-center">
        {/* Mobile - Show current page name */}
        <span class="md:hidden font-semibold text-base">{currentPageName}</span>
        {/* Desktop - Show menu */}
        <ul class="menu menu-horizontal px-1 hidden md:flex">
          <li class={cn(currentPath === '/use-cases' && 'active')}><a href="/use-cases">Use Cases</a></li>
          <li class={cn(currentPath.startsWith('/docs') && 'active')}><a href="/docs">Documentation</a></li>
          <li class={cn(currentPath === '/pricing' && 'active')}><a href="/pricing">Pricing</a></li>
          <li class={cn(currentPath === '/contact' && 'active')}><a href="/contact">Contact</a></li>
        </ul>
      </div>
      <div class="navbar-end">
        {/* Mobile hamburger menu */}
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost md:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </div>
          <ul tabindex="0" class="menu dropdown-content bg-base-100 rounded-box z-1 mt-3 w-64 p-4 shadow-xl border border-base-300">
            <li><a href="/use-cases" class="text-base py-3 hover:bg-primary hover:text-primary-content rounded-lg transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Use Cases
            </a></li>
            <li><a href="/docs" class="text-base py-3 hover:bg-primary hover:text-primary-content rounded-lg transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Documentation
            </a></li>
            <li><a href="/pricing" class="text-base py-3 hover:bg-primary hover:text-primary-content rounded-lg transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Pricing
            </a></li>
            <li><a href="/contact" class="text-base py-3 hover:bg-primary hover:text-primary-content rounded-lg transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Contact
            </a></li>
          </ul>
        </div>
        {/* Desktop George-Cloud button */}
        <a href={`${appUrl}/login`} class="btn btn-outline hidden md:flex">
          <CloudIcon class="size-5" />
          George-Cloud
        </a>
      </div>
    </div>

    <main class="max-w-7xl mx-auto px-8 py-8 min-h-[calc(100vh-200px)]">
      <slot />
    </main>

    {/* Mobile bottom navigation - George-Cloud button */}
    <div class="md:hidden">
      <div class="fixed bottom-0 left-0 right-0 bg-base-300 border-t border-base-content/10 p-4 z-40">
        <a href={`${appUrl}/login`} class="btn btn-primary btn-block">
          <CloudIcon class="size-5" />
          George-Cloud
        </a>
      </div>
    </div>

    <footer class="footer footer-center bg-base-200 px-4 py-3 pb-20 md:p-8 text-base-content mt-16">
      <nav class="flex gap-4">
        <a href="/impressum" class="link link-hover text-sm">Impressum</a>
      </nav>
      <aside>
        <p class="text-sm">&copy; {new Date().getFullYear()} George-AI</p>
      </aside>
    </footer>
  </body>
</html>
