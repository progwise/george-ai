---
import '../styles/global.css'

interface Props {
  title: string
  description?: string
}

const { title, description = 'George-AI - Self-hosted RAG platform' } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="m-0 p-0 font-sans">
    <nav class="bg-gray-900 px-8 py-4 flex gap-8">
      <a href="/" class="text-white no-underline hover:underline">Home</a>
      <a href="/about" class="text-white no-underline hover:underline">About</a>
      <a href="/contact" class="text-white no-underline hover:underline">Contact</a>
    </nav>

    <main class="max-w-screen-xl mx-auto px-8 py-8 min-h-[calc(100vh-200px)]">
      <slot />
    </main>

    <footer class="bg-gray-100 px-8 py-8 text-center mt-16">
      <p>&copy; {new Date().getFullYear()} George-AI. All rights reserved.</p>
    </footer>
  </body>
</html>
