---
import '../styles/global.css'

interface Props {
  title: string
  description?: string
}

const { title, description = 'George-AI - Self-hosted RAG platform' } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="m-0 p-0 font-sans">
    <div class="navbar bg-base-300">
      <div class="navbar-start">
        <a href="/" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full bg-white p-1">
            <img src="/bowler-logo.svg" alt="George-AI Logo" />
          </div>
        </a>
      </div>
      <div class="navbar-center hidden md:flex">
        <ul class="menu menu-horizontal px-1">
          <li><a href="/features">Features</a></li>
          <li><a href="/use-cases">Use Cases</a></li>
          <li><a href="/pricing">Pricing</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
      <div class="navbar-end">
        <a href="https://app.george-ai.net/login" class="btn btn-primary">Get Started</a>
      </div>
    </div>

    <main class="max-w-screen-xl mx-auto px-8 py-8 min-h-[calc(100vh-200px)]">
      <slot />
    </main>

    <footer class="footer footer-center bg-base-200 p-8 text-base-content mt-16">
      <aside>
        <p>&copy; {new Date().getFullYear()} George-AI. All rights reserved.</p>
      </aside>
    </footer>
  </body>
</html>
