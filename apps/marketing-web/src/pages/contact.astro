---
import Layout from '../layouts/Layout.astro'
import ContactFormModal from '../components/ContactFormModal.astro'
---

<Layout title="Contact - George-AI" description="Get in touch with the George-AI team">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center">Get in Touch</h1>

    <!-- Direct Contact Info -->
    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <!-- Contact Details Card -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-2xl mb-4">Contact Information</h2>
          <div class="space-y-3">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-1 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <div>
                <p class="font-semibold">Email</p>
                <a href="mailto:info@george-ai.net" class="link link-hover">info@george-ai.net</a>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-1 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <div>
                <p class="font-semibold">Phone</p>
                <a href="tel:+4915176995546" class="link link-hover">+49 (0) 151 76995546</a>
                <p class="text-sm text-base-content/70">Mo-Fr 9:00-18:00 CET</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-1 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <div>
                <p class="font-semibold">Address</p>
                <p class="text-sm">Fischstr. 21a</p>
                <p class="text-sm">D-17489 Greifswald</p>
                <p class="text-sm">Germany</p>
              </div>
            </div>
          </div>
          <div class="divider"></div>
          <a href="https://calendly.com/michael-vogt-progwise/30min" target="_blank" rel="noopener noreferrer" class="btn btn-primary btn-block">
            Schedule a Meeting
          </a>
        </div>
      </div>

      <!-- Quick Contact Card -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-2xl mb-4">Send us a Message</h2>
          <p class="mb-6">
            Have a question or want to discuss your use case? Fill out our contact form and we'll get back to you as soon as possible.
          </p>
          <ContactFormModal buttonText="Open Contact Form" buttonClass="btn btn-primary btn-block" />
        </div>
      </div>
    </div>

    <!-- Community & Support -->
    <h2 class="text-2xl font-bold mb-6 text-center">Community & Support</h2>

    <!-- Contact Cards -->
    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <!-- Discord Card -->
      <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow border-2 border-primary">
        <div class="card-body">
          <h2 class="card-title">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
            </svg>
            Discord Community
          </h2>
          <p>Ask questions, share ideas, and get support from the community</p>
          <div class="card-actions justify-end mt-4">
            <a href="https://discord.gg/5XP8f2Qe" target="_blank" rel="noopener noreferrer" class="btn btn-primary btn-sm">
              Join Discord
            </a>
          </div>
        </div>
      </div>

      <!-- Documentation Card -->
      <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
        <div class="card-body">
          <h2 class="card-title">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Documentation
          </h2>
          <p>Find guides, API references, and setup instructions</p>
          <div class="card-actions justify-end mt-4">
            <a href="/docs" class="btn btn-secondary btn-sm">
              View Docs
            </a>
          </div>
        </div>
      </div>

      <!-- GitHub Card -->
      <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
        <div class="card-body">
          <h2 class="card-title">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </h2>
          <p>Browse the source code and contribute to the project</p>
          <div class="card-actions justify-end mt-4">
            <a href="https://github.com/progwise/george-ai" target="_blank" rel="noopener noreferrer" class="btn btn-accent btn-sm">
              Visit Repository
            </a>
          </div>
        </div>
      </div>

      <!-- Issues Card -->
      <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
        <div class="card-body">
          <h2 class="card-title">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Report Issues
          </h2>
          <p>Found a bug or have a feature request? Let us know</p>
          <div class="card-actions justify-end mt-4">
            <a href="https://github.com/progwise/george-ai/issues" target="_blank" rel="noopener noreferrer" class="btn btn-info btn-sm">
              Open Issue
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Support Information -->
    <div class="card bg-base-200 shadow-lg">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4">Need Help?</h2>
        <div class="space-y-3">
          <div class="flex items-start gap-3">
            <div class="badge badge-primary">1</div>
            <div>
              <h3 class="font-bold">Join Discord for Quick Help</h3>
              <p class="text-sm">Get answers to questions, share ideas, and connect with the community.</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="badge badge-primary">2</div>
            <div>
              <h3 class="font-bold">Check the Documentation</h3>
              <p class="text-sm">Find comprehensive guides, API references, and setup instructions.</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="badge badge-primary">3</div>
            <div>
              <h3 class="font-bold">Report a Bug or Feature Request</h3>
              <p class="text-sm">Create a GitHub issue with detailed information about your problem or idea.</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="badge badge-primary">4</div>
            <div>
              <h3 class="font-bold">Talk to Sales</h3>
              <p class="text-sm">Schedule a demo or email us to discuss your enterprise needs and custom requirements.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
