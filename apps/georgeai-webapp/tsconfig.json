{
  "exclude": ["node_modules"],
  "include": ["src", "vite.config.ts", "codegen.ts"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./src/gql/schema.graphql"
      }
    ],
    "types": ["vite/client", "node"]
  }
}
