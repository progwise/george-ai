{
  "exclude": ["node_modules"],
  "include": ["app", "app.config.ts", "codegen.ts"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./app/gql/schema.graphql"
      }
    ]
  }
}
