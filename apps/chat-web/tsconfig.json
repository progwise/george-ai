{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./app/gql/schema.graphql"
      }
    ]
  }
}
