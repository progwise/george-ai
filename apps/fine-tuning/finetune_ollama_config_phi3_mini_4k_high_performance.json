{
  "base_model": "microsoft/Phi-3-mini-4k-instruct",
  "dataset_path": "jsonl/processed/train-original.jsonl",
  "validation_path": "jsonl/processed/valid-original.jsonl",
  "test_path": "jsonl/processed/test-original.jsonl",
  "train_ratio": 0.80,
  "valid_ratio": 0.15,
  "test_ratio": 0.05,
  "fine_tune_params": {
    "num_layers": 16,
    "learning_rate": 3e-4,
    "iters": 2000,
    "fine_tune_type": "lora",
    "lora_rank": 128,
    "lora_alpha": 256,
    "lora_dropout": 0.08,
    "batch_size": 4,
    "gradient_accumulation_steps": 16,
    "warmup_steps": 200,
    "weight_decay": 0.02,
    "scheduler": "cosine_with_warmup",
    "max_seq_length": 1536,
    "target_modules": ["q_proj", "k_proj", "v_proj", "o_proj", "gate_proj", "up_proj", "down_proj"],
    "save_strategy": "steps",
    "logging_steps": 25,
    "eval_strategy": "steps",
    "lr_schedule": "high_performance_exploration_exploitation"
  },
  "ollama_model_name": "phi3-mini-presscrafters-expert",
  "keep_split_data": true,
  "keep_fused_model": true,
  "keep_gguf_files": true,
  "keep_adapter_weights": true,
  "evaluation": {
    "metrics": ["accuracy", "bleu", "rouge", "exact_match", "f1", "perplexity"],
    "eval_steps": 80,
    "save_steps": 160,
    "load_best_model_at_end": true,
    "metric_for_best_model": "f1",
    "early_stopping_patience": 8,
    "early_stopping_threshold": 0.001
  },
  "data_processing": {
    "max_length": 768,
    "truncation": true,
    "padding": "max_length",
    "remove_columns": ["sourceDocument", "chunkIndex", "section", "category", "difficulty"]
  },
  "training_args": {
    "fp16": true,
    "dataloader_pin_memory": false,
    "dataloader_num_workers": 3,
    "group_by_length": true,
    "report_to": "none",
    "run_name": "phi3-mini-presscrafters-expert",
    "gradient_checkpointing": true,
    "max_grad_norm": 0.8
  },
  "learning_rate_schedule": {
    "type": "high_performance_exploration_exploitation",
    "phases": [
      {
        "name": "exploration",
        "steps": 400,
        "lr_range": [6e-4, 2e-4],
        "strategy": "linear_warmup"
      },
      {
        "name": "exploitation",
        "steps": 1200,
        "lr_range": [2e-4, 5e-6],
        "strategy": "cosine_decay"
      },
      {
        "name": "refinement",
        "steps": 400,
        "lr_range": [5e-6, 1e-6],
        "strategy": "exponential_decay"
      }
    ],
    "adaptive_threshold": 0.001,
    "patience_factor": 1.3
  },
  "advanced_training": {
    "curriculum_learning": true,
    "difficulty_sampling": true,
    "dynamic_batch_sizing": true,
    "gradient_clipping": "adaptive",
    "learning_rate_finder": true,
    "mixed_precision": true
  },
  "model_specific": {
    "trust_remote_code": true,
    "use_cache": false,
    "torch_dtype": "float16"
  }
}
