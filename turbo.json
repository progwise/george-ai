{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["STRAPI_API_KEY", "OPENAI_API_KEY", "OPENAI_API_ORG"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "packages/typesense-client/dist/**"
      ]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.test.tsx", "src/**/*.test.ts"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
