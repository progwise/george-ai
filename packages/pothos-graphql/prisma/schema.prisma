generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLogin   DateTime?
  email       String    @unique
  username    String    @unique
  name        String?
  given_name  String?
  family_name String?
  chatbots    Chatbot[]
}

model Chatbot {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  description String
  url       String?
  icon      String?
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
}
